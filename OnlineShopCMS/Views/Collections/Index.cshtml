<style>
    .row {
        display: flex;
        flex-wrap: wrap;
    }

    .col {
        flex-grow: 0;
        margin: 7px;
        padding: 5px;
    }

    .overflow-text {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 3;
        overflow: hidden;
    }

    .container {
        max-width: 1140px;
    }

    .index_5_blocks {
        margin-top: 50px;
        margin-bottom: 50px;
    }

        .index_5_blocks .section-blocks {
            display: grid;
            display: -ms-grid;
            width: 100%;
            grid-template-columns: 1fr 20px 1fr 20px 1fr;
            grid-template-rows: 6fr 15px 3fr;
            -ms-grid-columns: 1fr 20px 1fr 20px 1fr;
            -ms-grid-rows: 6fr 15px 3fr;
        }

            .index_5_blocks .section-blocks img {
                width: 100%;
            }

                .index_5_blocks .section-blocks img:hover {
                    opacity: 0.5;
                }

            .index_5_blocks .section-blocks .block-1 {
                display: block;
                grid-area: 1 / 1;
                -ms-grid-row: 1;
                -ms-grid-row-span: 1;
                -ms-grid-column: 1;
                -ms-grid-column-span: 1;
            }

            .index_5_blocks .section-blocks .block-2 {
                display: block;
                grid-area: 3 / 1;
                -ms-grid-row: 3;
                -ms-grid-row-span: 1;
