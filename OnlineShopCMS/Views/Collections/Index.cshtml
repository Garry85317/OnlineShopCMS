                -ms-grid-column-span: 1;
            }

            .index_5_blocks .section-blocks .block-3 {
                display: block;
                grid-area: 1 / 3 / span 3 / span 1;
                -ms-grid-row: 1;
                -ms-grid-row-span: 3;
                -ms-grid-column: 3;
                -ms-grid-column-span: 1;
            }

            .index_5_blocks .section-blocks .block-4 {
                display: block;
                grid-area: 1 / 5;
                -ms-grid-row: 1;
                -ms-grid-row-span: 1;
